<template x-if="modalOpen">
    <div x-show="modalOpen"
        class="fixed inset-0 z-20 flex flex-col items-center justify-center"
        x-transition:enter="transition ease-in duration-150"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-out duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0">
        <div class="flex flex-col items-center h-full overflow-auto">
            <dialog open class="container relative flex flex-col items-center justify-center space-y-4 bg-none">
                <div class="z-10 bg-white rounded-lg shadow-xl border-1-5 md:border-2 text-gray border-gray">
                    {% block content %}

                    {% endblock %}
                </div>
                <div class="z-10">
                    <button
                        @click="modalOpen=false"
                        class="flex items-center justify-center px-4 py-4 mx-auto space-x-2 transform bg-white rounded-full shadow-md hover:shadow-xl hover:-rotate-3 border-1-5 md:border-2 border-gray">
                        <span class="block w-6 h-6 text-gray">{% include "img/close.svg" %}</span>
                        <span class="text-xl font-bold leading-none">Return</span>
                    </button>
                </div>  
            </dialog>

        </div>
        <div
            @click="modalOpen = false"
            class="absolute inset-0 bg-opacity-75 bg-gray bg-blur"></div>
        </div>
    </div>
</template>