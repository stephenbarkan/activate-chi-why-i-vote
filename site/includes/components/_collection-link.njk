{% macro collectionLink(name) %}
        <a href="/category/{{ name | slug }}"
            class="block rounded-full lg:py-2 first:pt-0 last:pb-0 group">
            <span class="flex items-center justify-center p-6 text-xl font-bold leading-none tracking-wide text-center uppercase transform bg-white rounded-full shadow-md group-hover:shadow-xl border-1-5 border-gray lg:py-8 lg:border-2 font-display group-hover:rotate-3">
                {{name | replace("_", " ")}} 
            </span>
        </a>
{% endmacro %} 