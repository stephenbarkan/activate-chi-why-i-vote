{% macro collectionLink(name) %}
        <a href="/{{ name | slug }}"
            class="block lg:py-2 first:pt-0 last:pb-0 group">
            <span class="flex items-center justify-center p-6 text-xl font-bold leading-none tracking-wide text-center uppercase transform bg-white rounded-full shadow-md text-gray border-1-5 border-gray xl:py-10 lg:py-8 lg:border-2 font-display group-hover:rotate-3 xl:text-2xl">
                {{name | replace("_", " ")}} 
            </span>
        </a>
{% endmacro %} 